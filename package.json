{
  "name": "shelf",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "backfill-tags": "tsx --env-file=.env.local scripts/backfill-tags.ts",
    "build:extension": "node scripts/build-extension.js",
    "package:extension": "npm run build:extension && cd extension && zip -r ../shelf-extension.zip . -x '*.md' '*.DS_Store' 'README.md' 'DISTRIBUTION.md' 'config.js' && cd .. && echo 'Extension packaged as shelf-extension.zip'"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.49.1",
    "@tailwindcss/typography": "^0.5.19",
    "framer-motion": "^12.26.2",
    "next": "^15.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "remark-breaks": "^4.0.0",
    "sonner": "^2.0.7",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.10",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.1.6",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  }
}
