{
  "manifest_version": 3,
  "name": "Shelf - Save Bookmarks",
  "version": "1.0.0",
  "description": "Save any page to your Shelf bookmarks with one click",
  "permissions": ["activeTab", "storage", "scripting", "contextMenus"],
  "host_permissions": ["http://localhost:3000/*"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:3000/*"],
      "js": ["marker.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["marker-injected.js"],
      "matches": ["http://localhost:3000/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
